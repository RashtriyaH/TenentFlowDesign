<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TenentFlowDesign.View.SupportHelpPage"
           BackgroundColor="{StaticResource Black}">
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>

    <Grid>
        <Grid RowDefinitions="auto">
            <ImageButton Clicked="OnclickBackToSettings" BackgroundColor="Red" WidthRequest="40" HorizontalOptions="Start" Margin="20,25,10,10" Grid.Row="0" Grid.Column="0"/>
        </Grid>

        <Grid ColumnDefinitions="50,100" ColumnSpacing="100" Margin="100" VerticalOptions="Fill" >
            <Label Text="Raise a Ticket" Grid.Column="1" TextColor="Red" FontSize="20" FontAttributes="Bold"/>
        </Grid>

        <Grid RowDefinitions="auto,auto" VerticalOptions="Center" RowSpacing="20">
            <Frame Grid.Row="0">
                
            </Frame>
            <Frame Grid.Row="1">
            <Entry Placeholder=" Write here in 150 words" />
            </Frame>
        </Grid>

        <Grid ColumnDefinitions="auto,*"  VerticalOptions="End">
            <Button Text="Submit" Grid.Column="1" FontSize="15"/>
        </Grid>
        
    </Grid>
</ContentPage>