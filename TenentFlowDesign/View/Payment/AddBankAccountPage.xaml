<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TenentFlowDesign.View.Payment.AddBankAccountPage"
             Title="AddBankAccountPage"
             BackgroundColor="{StaticResource Black}">
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>
    <Grid>
        <Grid VerticalOptions="Start">
            <Grid RowDefinitions="100,auto,auto" RowSpacing="6" >
                <Image Source="backgroundtop_image.png" Aspect="AspectFill" HeightRequest="370" VerticalOptions="Start" Margin="70,-138,-96,-170"/>
                <ImageButton Source="back_arrow.png" Clicked="OnCLickToAccountPage"  BackgroundColor="Transparent" WidthRequest="13" HeightRequest="24" HorizontalOptions="Start" Margin="20,10,20,10" Grid.Row="0" Grid.Column="0"/>
                <Label Text="Add Bank Account" Grid.Row="0" HorizontalOptions="Center" FontSize="17" VerticalOptions="Center" TextColor="Gray" />
            </Grid>

            <Grid RowDefinitions="auto,auto,auto,auto,auto" Margin="35,100,25,0">
                <StackLayout Spacing="8" Grid.Row="0">
                    <Label Grid.Row="0" Text="Account number"  FontSize="17" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White"/>
                    <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                        <Entry  Margin="15,0,0,0" Placeholder="xxxx xxxxx xxxxx"/>
                    </Border>
                </StackLayout>

                <StackLayout Spacing="8" Grid.Row="1" Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                    <Label Grid.Row="1" Text="Confirm account"  FontSize="17" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White"/>
                    <Border BackgroundColor="Transparent" Grid.Row="1" StrokeShape="RoundRectangle 7" StrokeThickness="1">
                        <Entry Margin="15,0,0,0" Placeholder="xxxx xxxxx xxxxx"/>
                    </Border>
                </StackLayout>

                <StackLayout Spacing="8" Grid.Row="2"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                    <Label Grid.Row="1" Text="IFSC" FontSize="17" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White"/>
                    <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                        <HorizontalStackLayout>
                            <Label Text="â‚¹" VerticalOptions="Center" TextColor="White" FontAttributes="Bold" Margin="15,0,5,0"/>
                            <Entry Placeholder="rent amount*"/>
                        </HorizontalStackLayout>
                    </Border>
                    <Label Text="Find IFSC" TextColor="#F3D484" HorizontalOptions="End"/>
                </StackLayout>

                <StackLayout Spacing="8" Grid.Row="3"  Margin="0,20,0,0" Grid.RowSpan="1" Grid.Column="1">
                    <Label Grid.Row="1" Text="Branch"  FontSize="17" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White"/>
                    <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                        <Entry  Margin="15,0,0,0" Placeholder="xyz"/>
                    </Border>
                </StackLayout>

                <StackLayout Spacing="8" Grid.Row="4"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                    <Label Grid.Row="1" Text="Account name"  FontSize="17" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White"/>
                    <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                        <Entry  Margin="15,0,0,0" Placeholder="xyz"/>
                    </Border>
                </StackLayout>
            </Grid>
            <Button Text="ADD" FontAttributes="Bold" FontSize="20" TextColor="Black" CornerRadius="4" VerticalOptions="End" Margin="35,0,35,-140">
                <Button.Shadow>
                    <Shadow Brush="#00000080" Opacity="100" />
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#D5B15D"/>
                        <GradientStop Color="#FDFAC5"/>
                        <GradientStop Color="#F3D484" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</ContentPage>