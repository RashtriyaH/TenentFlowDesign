    <Grid>
        <Grid RowDefinitions="100,auto" ColumnDefinitions="*,*" VerticalOptions="Start"  >
        <Border HeightRequest="40" BackgroundColor="Transparent" >
            <Button x:Name="Button1"  Text="Button 1" Command="{Binding Button1Command}" BackgroundColor="{Binding Button1BackgroundColor}" />
        </Border>
            <Border  Grid.Column="1"  HeightRequest="40"  BackgroundColor="Transparent">
            <Button x:Name="Button2" Text="Button 2" Command="{Binding Button2Command}" BackgroundColor="{Binding Button2BackgroundColor}" />
        </Border>
    </Grid>
    <StackLayout BindableLayout.ItemsSource="{Binding Fields}" VerticalOptions="Center"  >
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="Transparent" >
                    <Grid RowDefinitions="auto,auto" RowSpacing="10" ColumnDefinitions="*">
                        <Label Text="{Binding Title}"  TextColor="White" Grid.Row="0" FontAttributes="Bold" IsVisible="{Binding IsTitleVisible}" />
                        <Label Text="{Binding Value}" VerticalTextAlignment="Center" Padding="12" HeightRequest="40" TextColor="White" IsVisible="{Binding IsValueVisible}" />
                    </Grid>
                </Frame>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </StackLayout>
    </Grid>


