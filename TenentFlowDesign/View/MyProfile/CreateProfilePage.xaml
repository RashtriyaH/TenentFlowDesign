<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TenentFlowDesign.View.MyProfile.CreateProfilePage"
             xmlns:lang="clr-namespace:TenentFlowDesign.Resx"
             Title="CreateProfilePage"
             BackgroundColor="{StaticResource Black}">
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>

    <ScrollView >
        <Grid>
            <Grid VerticalOptions="Start">
                <Grid RowDefinitions="100,auto,100,auto"  >
                    <Image Source="backgroundtop_image.png" Aspect="AspectFill" HeightRequest="370" VerticalOptions="Start" Margin="70,-138,-96,-170"/>
                    <Image Source="back_arrow.png"   BackgroundColor="Transparent" WidthRequest="13" HeightRequest="24" HorizontalOptions="Start" Margin="20,10,20,10" Grid.Row="0" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer  Command="{Binding MoveFromProfileToSubPageCommand}" CommandParameter="1" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="kai_image.png" HorizontalOptions="Center"  VerticalOptions="Center" Grid.Row="2" HeightRequest="184" WidthRequest="184"/>
                    <Image Source="write_image.png" HorizontalOptions="Center"  VerticalOptions="Center" Grid.Row="2" Margin="120,0,0,-110"/>
                    <Image  Source="editgold_image.png" HorizontalOptions="Start"  VerticalOptions="Center" Grid.Row="3" Margin="45,10,10,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer  Command="{Binding MoveFromProfileToSubPageCommand}" CommandParameter="2" />
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Grid>

            <StackLayout Margin="30">
                <Grid RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto" Margin="20,250,25,0">
                    <StackLayout Spacing="8" Grid.Row="0">
                        <Label Grid.Row="0" Text="{x:Static lang:AppResources.Registermobileno}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="White"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry  Margin="15,0,0,0" Keyboard="Telephone" TextColor="White" Placeholder="+91 9999999999"/>
                        </Border>
                    </StackLayout>

                    <StackLayout Spacing="8" Grid.Row="1" Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.title}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1" StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry Margin="15,0,0,0" Placeholder="Kai"/>
                        </Border>
                        <Border BackgroundColor="Transparent" Grid.Row="1" StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry Margin="15,0,0,0" Placeholder="Last Name"/>
                        </Border>
                    </StackLayout>

                    <StackLayout Spacing="8" Grid.Row="2"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.emailid}" FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <HorizontalStackLayout>
                                <Entry Placeholder="example@gmail.com"/>
                            </HorizontalStackLayout>
                        </Border>
                    </StackLayout>

                    <StackLayout Spacing="8" Grid.Row="3"  Margin="0,20,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.age}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry  Margin="15,0,0,0" Placeholder="25"/>
                        </Border>
                    </StackLayout>

                    <StackLayout Spacing="8" Grid.Row="4"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.fathername}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry  Margin="15,0,0,0" Placeholder="Enter Father Name"/>
                        </Border>
                    </StackLayout>
                    <StackLayout Spacing="8" Grid.Row="5"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.spouse}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry  Margin="15,0,0,0" Placeholder="Enter Spouse Name"/>
                        </Border>
                    </StackLayout>
                    <StackLayout Spacing="8" Grid.Row="6"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.occupation}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <Entry  Margin="15,0,0,0" Placeholder="Enter Occupation"/>
                        </Border>
                    </StackLayout>
                    <StackLayout Spacing="8" Grid.Row="7"  Margin="0,14,0,0" Grid.RowSpan="1" Grid.Column="1">
                        <Label Grid.Row="1" Text="{x:Static lang:AppResources.kyc}"  FontSize="16" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{StaticResource White}"/>
                        <Border BackgroundColor="Transparent" Grid.Row="1"   StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <HorizontalStackLayout>
                                <Entry  Margin="15,0,0,0" Placeholder="Aadhar Card"/>
                                <Image Source="verified_image.png" Margin="140,0" />
                            </HorizontalStackLayout>
                        </Border>
                        <Border BackgroundColor="Transparent" Grid.Row="1" StrokeShape="RoundRectangle 7" StrokeThickness="1">
                            <HorizontalStackLayout>
                                <Entry  Margin="15,0,0,0" Placeholder="PAN Card"/>
                                <Image Source="verified_image.png" Margin="160,0" HorizontalOptions="End"/>
                            </HorizontalStackLayout>
                        </Border>
                    </StackLayout>
                </Grid>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>