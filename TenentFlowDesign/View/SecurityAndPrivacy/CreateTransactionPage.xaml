<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lang="clr-namespace:TenentFlowDesign.Resx"
             x:Class="TenentFlowDesign.View.SecurityAndPrivacy.CreateTransactionPage"
             BackgroundColor="{StaticResource Black}">
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>

    <StackLayout VerticalOptions="Center" Spacing="40" Margin="30">

        <Grid  RowDefinitions="*">
            <Label Text="{x:Static lang:AppResources.CreatePassword}" HorizontalOptions="Start" VerticalTextAlignment="Center" TextColor="#F3E29D"  FontFamily="Calibri" FontSize="20"/>
        </Grid>

        <Grid RowDefinitions="auto,*" >
            <Label Text="{x:Static lang:AppResources.Passwd}" HorizontalOptions="Start" VerticalTextAlignment="Center" TextColor="{StaticResource White}"  FontFamily="Calibri" FontSize="20"/>
            <Entry Placeholder="Enter Password" FontAttributes="12"  Background="{StaticResource Gray100}" Grid.Row="1"/>
        </Grid>
    </StackLayout>
</ContentPage>
