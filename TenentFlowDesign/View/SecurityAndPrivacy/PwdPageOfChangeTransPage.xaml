<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TenentFlowDesign.View.SecurityAndPrivacy.PwdPageOfChangeTransPage"
             Title="PwdPageOfChangeTransPage"
             BackgroundColor="{StaticResource Black}">
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>

    <Border VerticalOptions="Center" BackgroundColor="Transparent" Stroke="#1c1c1c" WidthRequest="348" >
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15,15,15,15" />
        </Border.StrokeShape>
        <Grid HeightRequest="150" WidthRequest="348" >
            <Image Source="background_image.png" Aspect="Center"/>
            <Label  HorizontalTextAlignment="Center" FontSize="25" VerticalOptions="Center" TextColor="#F3E29D" >
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Congratulations !" TextColor="#F3E29D" />
                            <Span Text="&#10; Your Password" TextColor="#F3E29D" />
                            <Span Text="&#10; has been changed" TextColor="#F3E29D" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>
    </Border>

</ContentPage>